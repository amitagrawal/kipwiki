= form_for(@project_status) do |f|
  - if @project_status.errors.any?
    #error_explanation
      %h2
        = pluralize(@project_status.errors.count, "error")
        prohibited this project_status from being saved:
      %ul
        - @project_status.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
