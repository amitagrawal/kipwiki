!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title
      = yield(:title) || "Project Title"
    = stylesheet_link_tag "application","colorbox"
    = javascript_include_tag "livefyre", :src => 'http://livefyre.com/wjs/javascripts/livefyre.js'
    = javascript_include_tag "jquery", "colorbox", "application"
    = csrf_meta_tag
    = yield(:head)
  %body
    #wrapper
      #header
        .headerContent
          .logo
            %a{:href => "/"} kipWiki
      #content
        %ul.navigationUl
          - unless user_signed_in?
            %li
              = link_to "Login", new_user_session_path
              |
              = link_to "Sign Up", new_user_registration_path
          - else
            %li
              Welcome,
              = current_user.first_name
              |
              = link_to "Logout", destroy_user_session_path
        
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"

        - if show_title?
          %h1= yield(:title)

        = yield
      %h2 Comments
      :javascript
        var fyre = LF({
          site_id: 285879,
          version: '1.0'
        });

    #sidebar{:style => "float: right; width: 200px; border: 1px solid;"}
      %h2 Sidebar
      = yield(:sidebar)
    #footer
