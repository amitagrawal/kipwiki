= form_for(@stakeholder) do |f|
  - if @stakeholder.errors.any?
    #error_explanation
      %h2
        = pluralize(@stakeholder.errors.count, "error")
        prohibited this stakeholder from being saved:
      %ul
        - @stakeholder.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :url
    %br/
    = f.text_field :url
  .actions
    = f.submit
